<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="5dp">

    <EditText
        android:id="@+id/phone"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/register1"
        android:layout_marginTop="158dp"
        android:layout_x="49dp"
        android:layout_y="148dp"
        android:ems="10"
        android:hint="Phone "
        android:inputType="textPersonName|phone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_x="51dp"
        android:layout_y="226dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="95dp"
        android:layout_above="@+id/password"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_marginBottom="81dp"
        android:layout_x="80dp"
        android:layout_y="17dp"
        app:srcCompat="@mipmap/mretail2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="327dp"
        android:layout_height="59dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:layout_x="15dp"
        android:layout_y="308dp"
        android:background="@color/colorPrimary"
        android:text="LOGIN" />

    <TextView
        android:id="@+id/registerpage"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/password"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_x="68dp"
        android:layout_y="387dp"
        android:text=" dont have an account?Register"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_x="53dp"
        android:layout_y="124dp" />

</AbsoluteLayout>
