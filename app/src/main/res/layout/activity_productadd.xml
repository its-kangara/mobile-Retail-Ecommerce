<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    tools:context="com.example.chura.myapplication.productadd"
    android:paddingRight="5dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="243dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="50dp"
        android:layout_x="10dp"
        android:layout_y="38dp"
        android:gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="298dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:layout_x="50dp"
        android:layout_y="10dp"
        android:text="SELECT  YOUR PRODUCT IMAGE"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="339dp"
        android:ems="10"
        android:hint="Product Name "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/price"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="384dp"
        android:ems="10"
        android:hint="product price"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="428dp"
        android:ems="10"
        android:hint="Delivery Quality"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="483dp"
        android:background="@color/colorPrimary"
        android:text="ADD ITEM"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="287dp"
        android:text="Choose Image" />


</AbsoluteLayout>
